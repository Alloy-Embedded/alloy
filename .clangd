# Clangd configuration for Alloy framework
# This ensures the LSP can find compile_commands.json and understand macros

CompileFlags:
  # Use compile_commands.json from build directory
  CompilationDatabase: build

  # Add fallback flags if compile_commands.json doesn't exist yet
  Add:
    - -std=c++20
    - -Wall
    - -Wextra
    - -I/Users/lgili/Documents/01 - Codes/01 - Github/alloy/src
    - -I/Users/lgili/Documents/01 - Codes/01 - Github/alloy/include

Diagnostics:
  # Suppress warnings about undefined macros when not configured yet
  Suppress:
    - pp_macro_not_used

  ClangTidy:
    Add:
      - modernize*
      - performance*
      - readability*
    Remove:
      - modernize-use-trailing-return-type

Index:
  Background: Build
  StandardLibrary: Yes

Hover:
  ShowAKA: Yes
