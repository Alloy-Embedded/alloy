# Clang-tidy configuration for generated vendor files
# These are auto-generated files for embedded ARM targets

---
Checks: >
  -*,
  bugprone-*,
  -bugprone-easily-swappable-parameters,
  -bugprone-reserved-identifier,
  cert-*,
  -cert-dcl37-c,
  -cert-dcl51-cpp,
  clang-analyzer-*,
  concurrency-*,
  cppcoreguidelines-*,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-avoid-non-const-global-variables,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  -cppcoreguidelines-pro-bounds-array-to-pointer-decay,
  -cppcoreguidelines-owning-memory,
  -cppcoreguidelines-avoid-c-arrays,
  -cppcoreguidelines-pro-type-reinterpret-cast,
  -cppcoreguidelines-interfaces-global-init,
  google-*,
  -google-runtime-references,
  hicpp-*,
  -hicpp-no-array-decay,
  -hicpp-avoid-c-arrays,
  -hicpp-vararg,
  -hicpp-no-assembler,
  misc-*,
  -misc-non-private-member-variables-in-classes,
  -misc-const-correctness,
  modernize-*,
  -modernize-use-trailing-return-type,
  -modernize-avoid-c-arrays,
  performance-*,
  portability-*,
  readability-*,
  -readability-magic-numbers,
  -readability-function-cognitive-complexity,
  -readability-identifier-length,
  -readability-identifier-naming,
  -readability-qualified-auto

# Do not treat warnings as errors for generated files
WarningsAsErrors: ''

# Disable system checks that cause issues with cross-compilation
SystemHeaders: false
